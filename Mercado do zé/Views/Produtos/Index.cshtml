
@model Mercado_do_zé.ViewModels.ProdutosIndexViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Produtos</h2>

@if (@Model.Produtos.Count > 0)
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr><th>Produto</th></tr>
        </thead>
        <tbody>
            @foreach (var produto in Model.Produtos)
            {
                <tr><td>@produto.Nome</td></tr>
            }
        </tbody>
    </table>
}
