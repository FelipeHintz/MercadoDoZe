@model Mercado_do_zé.ViewModels.ClienteEditarViewModel
@{     
    ViewBag.Title = Model.Titulo;
} 
<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Salvar", "Clientes")) 
{
    @Html.HiddenFor(m => m.Cliente.Id)
    <div class="form-group">
        @Html.LabelFor(m => m.Cliente.Nome)
        @Html.TextBoxFor(m => m.Cliente.Nome, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Cliente.Descricao)
        @Html.TextBoxFor(m => m.Cliente.Descricao, new { @class = "form-control" })
    </div> 
    <div class="form-group">
        @Html.LabelFor(m => m.Cliente.EnderecoImagem)
        @Html.TextBoxFor(m => m.Cliente.EnderecoImagem, new { @class = "form-control", type="file" })
    </div>     
    <button type="submit" class="btn btn-primary">Salvar</button> 
} 