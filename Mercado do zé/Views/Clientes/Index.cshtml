
@model Mercado_do_zé.ViewModels.ClientesIndexViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Clientes</h2>

@if (@Model.Clientes.Count > 0)
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr><th>Cliente</th></tr>
        </thead>
        <tbody>
            @foreach (var cliente in Model.Clientes)
            {
                <tr><td>@Html.ActionLink(@cliente.Nome, "Detalhes", new { cliente.Id })</td></tr>
            }
        </tbody>
    </table>
}

